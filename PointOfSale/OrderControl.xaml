<UserControl x:Class="PointOfSale.OrderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button />
        <DockPanel Grid.Column="0" Margin="10,10,10,10">
            <Button Content="Item Selection" DockPanel.Dock="Top" Margin="10,10,10,10" />
            <Button Content="Cancel Order" DockPanel.Dock="Top" Margin="10,10,10,10" />
            <Button Content="Complete Order" DockPanel.Dock="Top" Margin="10,10,10,10" />
            <local:MenuItemSelectionControl DockPanel.Dock="Bottom"/>
        </DockPanel>
        <local:OrderSummaryControl Grid.Column="1" Grid.Row="1" Margin="10,10,10,10"/>
    </Grid>
</UserControl>
