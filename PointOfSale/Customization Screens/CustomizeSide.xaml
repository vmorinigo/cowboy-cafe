<UserControl x:Class="PointOfSale.CustomizeSide"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!--Small-->
        <RadioButton x:Name="SmallButton" FontSize="30" Grid.Row="0" Content="Small" Click="Button_Click" Height="100" Width="200" Margin="0,0,0,50"/>

        <!--Medium-->
        <RadioButton x:Name="MediumButton" FontSize="30" Grid.Row="1" Content="Medium" Click="Button_Click" Width="200" Height="100" Margin="0,0,0,51"/>

        <!--Large-->
        <RadioButton x:Name="LargeButton" FontSize="30" Grid.Row="2" Content="Large" Click="Button_Click" Width="200" Height="100" Margin="0,0,0,50"/>
    </Grid>
</UserControl>
