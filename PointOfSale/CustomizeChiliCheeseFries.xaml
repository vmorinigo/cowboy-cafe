<UserControl x:Class="PointOfSale.CustomizeChiliCheeseFries"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <StackPanel>
            <TextBlock Text="Size:"  Margin="5,5,5,20" FontSize="20" />
            <RadioButton x:Name="small"  Margin="100,5,5,20" Checked="HandleCheck" Content="Small" TextBlock.FontSize="20" />
            <RadioButton x:Name="medium"  Margin="100,5,5,20" Checked="HandleCheck" Content="Medium" TextBlock.FontSize="20" />
            <RadioButton x:Name="large"  Margin="100,5,5,5" Checked="HandleCheck" Content="Large" TextBlock.FontSize="20" />
        </StackPanel>
    </Grid>
</UserControl>
